@using Microsoft.AspNetCore.Components.Rendering
<nav class="bg-gray-800 flex text-white md:items-center flex-col md:flex-row sticky top-0 left-0 z-10">
    <div class="flex h-16 items-center pl-4 md:pl-8">
        <img class="w-28 mr-7 pr-7 py-1 logo md:hidden lg:block" src="blazeorbital-logo-simple.svg" alt="BlazeOrbital logo" />

        <div class="mobile-title md:hidden">@RenderNavLinks</div>

        <button type="button" @onclick="ToggleMenu" class="md:hidden ml-auto mr-4 bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-controls="mobile-menu" aria-expanded="@(expandMenu ? "true" : "false")">
            <span class="sr-only">Open main menu</span>
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>
    <div class="@(expandMenu ? "" : "hidden") md:flex flex-grow">
        <div class="flex flex-grow flex-col md:flex-row md:flex" @onclick="ToggleMenu">
            @RenderNavLinks
        </div>

        <div class="md:ml-auto py-4 md:py-0 flex mx-4 md:mr-8 justify-center items-center">
            <LoginDisplay />
        </div>
    </div>
</nav>

@code {
    bool expandMenu = false;

    void ToggleMenu()
    {
        expandMenu = !expandMenu;
    }

    void RenderNavLinks(RenderTreeBuilder __builder)
    {
        <NavLink class="navlink" href="" Match="@NavLinkMatch.All">Dashboard</NavLink>
        <NavLink class="navlink" href="workflow">Workflow</NavLink>
        <NavLink class="navlink" href="designs">Designs</NavLink>
        <NavLink class="navlink" href="inventory">Inventory</NavLink>
    }
}
